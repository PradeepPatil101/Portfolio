<div class="container ">
<p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-md-6">
      <h1 class="mb-4">Admin</h1>
    </div>
  </div>

  <div class="row">
    <% @admins.each do |admin| %>
        <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            Name: <%= admin.name %>
          </div>
          <div class="card-body">
            <p><strong>Email:</strong> <%= admin.email %></p>
            <p><strong>Phone Number:</strong> <%= admin.phone_number %></p>
            <p><strong>Address:</strong>
              <%= admin.address %>
            </p>
            <p><strong>Credit Card:</strong> <%= admin.credit_number %></p>

            <div class="d-flex justify-content-center align-items-center">
              <%= link_to 'Show', admin, class: "btn btn-outline-primary mx-2" %>
              <%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-outline-warning mx-2" %>

              </div>
          </div>
        </div>
        </div>
  </div>
      <% end %>
</div>