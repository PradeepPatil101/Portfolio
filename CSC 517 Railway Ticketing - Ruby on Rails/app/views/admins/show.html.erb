<p id="notice" class="alert alert-info <% unless notice %>d-none<% end %>"><%= notice %></p>

<div class="card">
  <div class="card-header">
    Admin Details
  </div>
  <div class="card-body">

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">


          <div class="row">

            <div class="form-group">
              <label for="username">Username: </label>
              <input type="text" id="username" value="<%= @admin.username %>" class= "form-control" readonly>
            </div>

          </div>

          <div class="form-group mt-2">
            <label for="name">Name: </label>
            <input type="text" id="name" value="<%= @admin.name %>" class= "form-control" readonly>
          </div>

          <div class="form-group mt-2">
            <label for="email">Email: </label>
            <input type="text" id="email" value="<%= @admin.email %>" class= "form-control" readonly>
          </div>

          <div class="form-group mt-2">
            <label for="phone_number">Phone Number: </label>
            <input type="text" id="phone_number" value="<%= @admin.phone_number %>" class= "form-control" readonly>
          </div>

          <div class="form-group mt-2">
            <label for="address">Address: </label>
            <input type="text" id="address" value="<%= @admin.address %>" class= "form-control" readonly>
          </div>

          <div class="form-group mt-2">
            <label for="credit_card">Credit Card: </label>
            <input type="text" id="credit_card" value="<%= @admin.credit_number %>" class= "form-control" readonly>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Edit', edit_admin_path(@admin), class: "btn btn-outline-warning" %>
            <%= link_to 'Back', admins_path,  class: "btn btn-outline-secondary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>



