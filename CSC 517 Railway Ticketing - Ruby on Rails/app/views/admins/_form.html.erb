<div class="container ">
  <div class="d-flex justify-content-center">
    <div class="col-md-6">

<%= form_with(model: admin, html: { class: 'mt-4' }) do |form| %>

  <% if @admin.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>
      <ul>
        <% @admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

    <div class="row justify-content-center">
      <div class="col-md-8 offset-md-2">

        <div class="form-group">
          <%= form.label :name, class: "mb-2" %>
          <%= form.text_field :name, class: 'form-control mb-2', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :email, class: "mb-2" %>
          <%= form.text_field :email, class: 'form-control mb-2', required: true %>
        </div>

        <% unless @hide_some_field %>
          <div class="form-group">
            <%= form.label :password, class: "mb-2" %>
            <%= form.password_field :password, class: 'form-control mb-2', required: true %>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :phone_number, class: "mb-2" %>
          <%= form.text_field :phone_number, class: 'form-control mb-2', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :address, class: "mb-2" %>
          <%= form.text_area :address, class: 'form-control mb-2', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :credit_number, class: "mb-2" %>
          <%= form.text_field :credit_number, class: 'form-control mb-2', required: true %>
        </div>

        <div class="form-group mt-4 mb-4">
          <%= form.submit 'Save Admin', class: 'btn btn-outline-primary' %>
        </div>

      </div>
    </div>
  </div>

<% end %>
    </div>
  </div>
</div>