<% if notice %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Review Details</h5>

      <p class="card-text">
        <strong>Passenger:</strong>
        <%= @review.passenger.full_name %>
      </p>

      <p class="card-text">
        <strong>Train:</strong>
        <%= @review.train.train_number %>
      </p>

      <p class="card-text">
        <strong>Rating:</strong>
        <%= @review.rating %>
      </p>

      <p class="card-text">
        <strong>Feedback:</strong>
        <%= @review.feedback %>
      </p>

      <div>
        <% if session[:user_id] ==  @review.passenger_id || session[:admin] %>
        <%= link_to 'Edit', edit_review_path(@review), class: 'btn btn-outline-warning' %>
        <% end %>
        <%= link_to 'Back', reviews_path, class: 'btn btn-outline-info ml-2' %>
      </div>
    </div>
  </div>
    </div>
  </div>
</div>
