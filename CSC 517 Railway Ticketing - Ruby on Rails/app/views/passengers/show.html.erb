
<p id="notice" class="alert alert-info <% unless notice %>d-none<% end %>"><%= notice %></p>

<div class="card">
  <div class="card-header">
    Passenger Details
  </div>
  <div class="card-body">

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">


        <!-- Name Fields -->
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="first_name">First Name: </label>
              <input type="text" id="first_name" value="<%= @passenger.first_name%>" class= "form-control" readonly>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="last_name">Last Name: </label>
              <input type="text" id="last_name" value="<%= @passenger.last_name %>" class= "form-control" readonly>
            </div>
          </div>
        </div>

        <!-- Email Field -->
        <div class="form-group mt-2">
          <label for="email">Email: </label>
          <input type="text" id="email" value="<%= @passenger.email%>" class= "form-control" readonly>
        </div>


        <div class="form-group mt-2">
          <label for="phone_number">Phone Number: </label>
          <input type="text" id="phone_number" value="<%= @passenger.phone_number %>" class= "form-control" readonly>
        </div>

        <!-- Address Fields -->
        <div class="form-group mt-2">
          <label for="street_name">Street Name: </label>
          <input type="text" id="street_name" value="<%= @passenger.street_name %>" class= "form-control" readonly>
        </div>

        <div class="form-group mt-2">
          <label for="street_name2">Street Name 2: </label>
          <input type="text" id="street_name2" value="<%= @passenger.street_name2 %>" class= "form-control" readonly>
        </div>

        <div class="row mt-2">
          <div class="col-md-6">
            <div class="form-group">
              <label for="city">City: </label>
              <input type="text" id="city" value="<%= @passenger.city %>" class= "form-control" readonly>
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-group">
              <label for="state">State: </label>
              <input type="text" id="state" value="<%= @passenger.state %>" class= "form-control" readonly>
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-group">
              <label for="zip">Zip: </label>
              <input type="text" id="zip" value="<%= @passenger.zip %>" class= "form-control" readonly>
            </div>
          </div>
        </div>


        <% if session[:user_id] == @passenger.id %>
            <div class="form-group mt-2 mb-3">
              <label for="credit_card_info">Credit Card: </label>
              <input type="text" id="credit_card_info" value="<%= @credit_card_info %>" class= "form-control" readonly>
            </div>
        <% elsif session[:user_id] != @passenger.id %>
            <div class="form-group mt-2 mb-4 ">
              <label for="credit_card_info">Credit Card: </label>
              <input type="text" id="credit_card_info" value="<%= @credit_card_info %>" class= "form-control" readonly>
            </div>
        <% else %>
            <div class="form-group mt-2">
              <label for="credit_card_info">Credit Card: </label>
              <input type="text" id="credit_card_info" value="<%= @credit_card_info %>" class= "form-control" readonly>
            </div>
        <% end %>



        <% if session[:admin] %>
          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Edit', edit_passenger_path(@passenger), class: "btn btn-outline-warning" %>
            <%= link_to 'Back', passengers_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
        <% if session[:user_id] == @passenger.id %>
            <div class="d-flex justify-content-between mb-4">
            <%= link_to 'Edit', edit_passenger_path(@passenger), class: "btn btn-outline-warning" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
