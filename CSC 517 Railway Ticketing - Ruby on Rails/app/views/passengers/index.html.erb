<div class="container ">
<p id="notice" class="alert alert-info <% unless notice %>d-none<% end %>"><%= notice %></p>

  <div class="row">
    <div class="col-md-6">
      <h1 class="mb-4">Passengers</h1>
    </div>
    <div class="col-md-6 d-flex justify-content-end">
      <div class="mb-4">
        <%= link_to 'New Passenger', new_passenger_path, class: "btn btn-outline-success" %>
      </div>
    </div>
  </div>

<div class="row">
  <% @passengers.each do |passenger| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header">
          Name: <%= passenger.first_name %> <%= passenger.last_name %>
        </div>
        <div class="card-body">
          <p><strong>Email:</strong> <%= passenger.email %></p>
          <p><strong>Phone Number:</strong> <%= passenger.phone_number %></p>
          <p><strong>Address:</strong>
            <%= passenger.street_name %> <br>
            <%= passenger.street_name2 %> <br>
            <%= passenger.city %>, <%= passenger.state %> <% passenger.city %>
          </p>

          <div class="d-flex justify-content-center align-items-center">
            <%= link_to 'Show', passenger, class: "btn btn-outline-primary mx-2" %>
            <%= link_to 'Edit', edit_passenger_path(passenger), class: "btn btn-outline-warning mx-2" %>

            <%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger mx-2" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


</div>