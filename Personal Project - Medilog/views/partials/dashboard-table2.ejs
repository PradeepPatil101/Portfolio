<h4 class="display-5" style="text-align: center; padding:10px;">Uploads and Updates Table for Reports</h4>
<hr>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table" id="report_table">
            <thead>
                <tr class="table-success">
                    <th scope="col">ID</th>
                    <th scope="col">Date Uploaded</th>
                    <th scope="col">Date Updated</th>
                </tr>
            </thead>
            <tbody>
                <%for(var i=0; i<r2.length;i++){%>
                    <tr class="table-light">
                        <th scope="row">
                            <%=r2[i].id%>
                        </th>
                        <td>
                            <%
                                let date1 = ("0" + r2[i].date_created.getDate()).slice(-2);

                                // current month
                                let month1 = ("0" + (r2[i].date_created.getMonth() + 1)).slice(-2);
                                
                                // current year
                                let year1 = r2[i].date_created.getFullYear();
                                %>
                                <%=month1%>/
                                    <%=date1%>/
                                        <%=year1%>
                        </td>
                        <td>
                            <%
                                let date2 = ("0" + r2[i].date_updated.getDate()).slice(-2);

                                // current month
                                let month2 = ("0" + (r2[i].date_updated.getMonth() + 1)).slice(-2);
                                
                                // current year
                                let year2 = r2[i].date_updated.getFullYear();
                                %>
                                <%=month2%>/
                                    <%=date2%>/
                                        <%=year2%>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
        <hr>
    </div>
</div>