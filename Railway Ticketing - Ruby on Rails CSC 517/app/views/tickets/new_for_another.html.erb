<div class="card">
  <div class="card-header">
    <h2>Purchase Ticket for Another Passenger</h2>
  </div>
  <div class="card-body">
    <%= form_with url: confirm_purchase_for_another_path(@train.id), method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, "Select Passenger From List of Registered Passengers:" %>
        <%= form.select :email, @passengers.collect { |p| [p.email, p.email] }, {}, class: 'form-control mt-2' %>
      </div>
      <%= form.submit "Purchase for Passenger", class: 'btn btn-outline-primary mt-2' %>
    <% end %>
  </div>
</div>
