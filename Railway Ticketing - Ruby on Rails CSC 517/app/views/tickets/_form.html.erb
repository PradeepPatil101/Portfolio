<%= form_with(model: ticket, class: 'mt-3') do |form| %>
  <% if ticket.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h6>
      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :passenger_id, "Passenger" %>
    <%= form.collection_select :passenger_id, @passengers, :id, :first_name, { prompt: 'Select a Passenger' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :train_id, "Train" %>
    <%= form.collection_select :train_id, @trains, :id, :train_number, { prompt: 'Select a Train' }, { class: 'form-control' } %>
  </div>

  <div class="actions mt-2">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
